.c-list
  display block
  list-style none outside none
  padding 0
  margin-left 0

  &--toggle
    background rgba(color(a, -5.5), 0.15)

    .c-list__item
      > .c-list--toggle
        max-height 0
        overflow hidden
        opacity 0

      &.is-active
        background transparent

        > .c-list--toggle
          overflow visible
          max-height 999em
          opacity 1
          transition: max-height $easing.swift 0.5s 0.4s;

  &__item
    background white
    margin-top 0
    transition: all $easing.swift 0.25s 0.2s, max-height $easing.swift 0.45s;
    overflow hidden
    max-height 999em

    > .c-list
      margin-top 0


  &__group, &__page
    font-weight 400
    border-left 6px solid transparent
    display block
    padding em(6px) em(24px)
    text-decoration none
    border-bottom: 1px solid $config.border-color;
    position relative

    &:after
      icon-styles()
      pseudo right

  &__group
    &:after
      icon caret-down

    .c-list__item.is-active > &
      font-weight 800

      &:after
        icon caret-up

  &__page
    &:after
      icon caret-right

  &--inline
    margin-top 0

    & .c-list__page
      padding-left em(24px * 2)

  &.has-active > &__item:not(.is-active)
    transform translateX(-100%)
    max-height 0

