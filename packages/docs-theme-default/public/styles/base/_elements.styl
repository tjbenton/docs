main // this resets the `main` so it acts normal in all browsers
  display block
  -webkit-overflow-scrolling touch

// Responsive images (ensure images don't scale beyond their parents)
img
  border 0
  height auto // Part 2: Scale the height according to the width, otherwise you get stretching
  max-height 100%
  max-width 100% // Part 1: Set a maxium relative to the parent
  vertical-align middle
  width auto\9 // IE7-8: need help adjusting responsive images
  -ms-interpolation-mode bicubic

figure
  margin 0

fieldset
  border none
  margin 0
  min-width 0 // this overrides the browser and allows the search area to scroll on the x axis
  padding 0

label, button, select
  @extend $cursor

input
 for type in ('button' 'reset' 'submit' 'radio' 'checkbox')
   &[type={type}]
     @extend $cursor

code, pre
  font-family 'Source Code Pro', Monaco, Menlo, Consolas, 'Courier New', monospace
  border-radius: $config.border-radius;

code
  background-color color(e, -7.5)
  border-radius: ($config.border-radius / 2);
  color e
  padding: ($config.spacing-sizes.tiny / 2) $config.spacing-sizes.tiny ($config.spacing-sizes.tiny / 2);
  white-space nowrap

pre code
  background color(a, -8)
  border 0
  color #333
  color inherit
  display block
  line-height: $config.line-height;
  padding 0.5em
  white-space pre-wrap
