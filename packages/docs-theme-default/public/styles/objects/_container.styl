// @name Container
// @author Tyler Benton
// @page objects/container
// @description
// Creates a container to use so certain items can stand out more than others.
.o-container
  $small = '\@sm'
  $medium = '\@md'
  $large = '\@lg'
  padding $spacing

  +media('>=sm')
    &{$small}
      padding $spacing

  +media('>=md')
    &, &{$small}, &{$medium}
      padding ($spacing * 2)

  +media('>=lg')
    &, &{$small}, &{$medium}, &{$large}
      padding ($spacing * 2)