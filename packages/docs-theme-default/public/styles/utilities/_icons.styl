@font-face
  font-family 'icons'
  src url('/fonts/icons/icons.eot?v=4.6.3')
  src url('/fonts/icons/icons.eot?#iefix&v=4.6.3') format('embedded-opentype'), url('/fonts/icons/icons.woff2?v=4.6.3') format('woff2'), url('/fonts/icons/icons.woff?v=4.6.3') format('woff'), url('/fonts/icons/icons.ttf?v=4.6.3') format('truetype'), url('/fonts/icons/icons.svg?v=4.6.3#fontawesomeregular') format('svg')
  font-weight normal
  font-style normal

.u-icon
  min-height 1em
  min-width 1em
  position relative

  &:before
    display inline-block
    font: normal normal normal $config.font-size/1em $icon.font-family; // stylelint-disable-line
    -moz-osx-font-smoothing grayscale
    -webkit-font-smoothing antialiased
    height 1em
    speak none
    text-indent 0
    text-rendering auto
    text-transform none
    user-select none
    width 1em

  for $icon in $icons
    &--{$icon}:before
      icon $icon
